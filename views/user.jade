extends layout
script.
  (function (window, document) {
  document.getElementById('toggle').addEventListener('click', function (e) {
      document.getElementById('tuckedMenu').classList.toggle('custom-menu-tucked');
      document.getElementById('toggle').classList.toggle('x');
  });
  })(this, this.document);
block content
  include menu
  div#main.pure-g
    div.pure-u-1.l-box
      h3 Welcome #{user.profile.displayName}!
      p
        div.col-sm-12
        strong ID Token Payload
        br
        pre #{JSON.stringify(decodedIDToken, null, 4)}
      p
        strong access_token 
        a(href="user/refresh")
          button#apiCallButton.pure-button.pure-button-primary Refresh Tokens 
        &nbsp;
        a(href="user/revoke")
          button#apiCallButton.pure-button.pure-button-primary Revoke Access Token
        br
        pre #{user.extraParams.access_token}
      p
        strong refresh_token
        br
        pre #{user.extraParams.refresh_token}
      p &nbsp;
      p
        a(href="user/userinfo")
          button#apiCallButton.pure-button.pure-button-primary Call Userinfo
      p
        a(href="user/opaqueapicall")
          button#apiCallButton.pure-button.pure-button-primary Call API (accepts opaque token only)
      p
        a(href="user/jwtapicall")
          button#apiCallButton.pure-button.pure-button-primary Call API (accepts JWT token only)
      p &nbsp;
      p
        strong API call result
        br
        pre#api-call-result #{JSON.stringify(apiData, null, 4)}
      